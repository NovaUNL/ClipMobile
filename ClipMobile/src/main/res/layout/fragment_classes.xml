<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/main_view"
        android:layout_width="@dimen/fragment_student_classes_card_width"
        android:layout_height="@dimen/fragment_student_classes_card_height"
        android:layout_gravity="center"
        card_view:cardCornerRadius="4dp">

        <ListView xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/list_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fadingEdgeLength="5dp"
            android:groupIndicator="@android:color/transparent"
            android:requiresFadingEdge="vertical"
            tools:listitem="@android:layout/simple_list_item_1" />

    </android.support.v7.widget.CardView>

    <include layout="@layout/progress_spinner" />

</FrameLayout>